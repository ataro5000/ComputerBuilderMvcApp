@model ComputerBuilderMvcApp.Models.Customer 
@{
    ViewData["Title"] = "My Account";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h2>@ViewData["Title"]</h2>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["InfoMessage"] != null)
{
    <div class="alert alert-info">@TempData["InfoMessage"]</div>
}

<div>
    <h4>Account Details</h4>
    <dl class="row">
        <dt class="col-sm-3">Username:</dt>
        <dd class="col-sm-9">@Model.UserName</dd>

        <dt class="col-sm-3">Email:</dt>
        <dd class="col-sm-9">@Model.Email</dd>

        <dt class="col-sm-3">First Name:</dt>
        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.FirstName) ? "Not set" : Model.FirstName)</dd>

        <dt class="col-sm-3">Last Name:</dt>
        <dd class="col-sm-9">@(string.IsNullOrEmpty(Model.LastName) ? "Not set" : Model.LastName)</dd>
        
    </dl>
</div>

<div class="mt-4">
    @* This is the link to the Edit Profile page *@
    <a asp-action="EditProfile" asp-controller="Account" class="btn btn-primary">Edit Profile Details</a>
    
    @* You can add other links here, like "Change Password", "My Orders", etc. *@
    <a asp-action="MyOrders" asp-controller="Account" class="btn btn-info ms-2">View My Orders</a>
    @* Example for Change Password (if you have it):
    <a asp-area="Identity" asp-page="/Account/Manage/ChangePassword" class="btn btn-warning ms-2">Change Password</a> 
    *@
</div>